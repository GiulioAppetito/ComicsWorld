<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coomics.SettingsController">
   <left>
      <VBox fx:id="settingsBox" prefHeight="400" prefWidth="185.0" BorderPane.alignment="CENTER">

         <padding>
            <Insets bottom="20.0" top="20.0"/>
         </padding>

         <styleClass>
            <String fx:value="oval-layout"/>
            <String fx:value="white-background"/>
         </styleClass>


         <Button fx:id="profile" mnemonicParsing="false" onMouseClicked="#openProfile" prefHeight="58.0"
                 prefWidth="185.0" styleClass="transparent" text="Profile"/>
         <Separator prefWidth="200.0"/>
         <Button fx:id="accountsettings" mnemonicParsing="false" onMouseClicked="#openAccount" prefHeight="58.0"
                 prefWidth="185.0" styleClass="highlighted-background" text="Account"/>
         <Separator prefWidth="200.0"/>
         <Button fx:id="preferencessettings" mnemonicParsing="false" prefHeight="58.0" prefWidth="185.0"
                 styleClass="transparent" text="Preferences"/>
         <Separator prefWidth="200.0"/>
         <Button fx:id="badgessettings" mnemonicParsing="false" prefHeight="58.0" prefWidth="185.0"
                 styleClass="transparent" text="My Badges"/>
         <Separator prefWidth="200.0"/>
         <Button fx:id="aboutussettings" mnemonicParsing="false" prefHeight="58.0" prefWidth="185.0"
                 styleClass="transparent" text="About Us"/>
         <Separator prefWidth="200.0"/>
      </VBox>
   </left>
   <center>
      <Pane prefHeight="400.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </Pane>
   </center>
</BorderPane>
