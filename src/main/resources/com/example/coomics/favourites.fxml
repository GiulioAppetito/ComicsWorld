<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="729.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coomics.SettingsController">
    <left>
        <VBox fx:id="settingsBox" opacity="0.7" prefHeight="709.0" prefWidth="204.0" styleClass="transparent" stylesheets="@../../../css/fullpackstyling.css" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>

            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>

            <Button fx:id="profile" alignment="CENTER" mnemonicParsing="false" onAction="#openProfileSettings" prefHeight="58.0" prefWidth="245.0" stylesheets="@../../../css/fullpackstyling.css" text="Comics">
                <styleClass>
                    <String fx:value="button2" />
                    <String fx:value="transparent" />
                </styleClass>
            <font>
               <Font name="Berlin Sans FB" size="18.0" />
            </font></Button>
            <Separator prefWidth="200.0" />
            <Button fx:id="accountsettings" alignment="CENTER" mnemonicParsing="false" onAction="#openAccountSettings" prefHeight="58.0" prefWidth="214.0" stylesheets="@../../../css/fullpackstyling.css" text="Authors">
                <styleClass>
                    <String fx:value="button2" />
                    <String fx:value="transparent" />
                </styleClass>
            <font>
               <Font name="Berlin Sans FB" size="18.0" />
            </font></Button>
            <Separator prefWidth="200.0" />
            <Button fx:id="preferencessettings" alignment="CENTER" mnemonicParsing="false" onAction="#openPreferencesSettings" prefHeight="58.0" prefWidth="233.0" stylesheets="@../../../css/fullpackstyling.css" text="Characters">
                <styleClass>
                    <String fx:value="button2" />
                    <String fx:value="transparent" />
                </styleClass>
            <font>
               <Font name="Berlin Sans FB" size="18.0" />
            </font></Button>
            <Separator prefWidth="200.0" />
        </VBox>
    </left>
    <center>
        <Pane prefHeight="400.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </BorderPane.margin>
        </Pane>
    </center>
</BorderPane>
