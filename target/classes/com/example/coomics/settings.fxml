<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="729.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coomics.SettingsController">
   <left>
      <VBox fx:id="settingsBox" opacity="0.7" prefHeight="400" prefWidth="185.0" styleClass="transparent" stylesheets="@../../../css/fullpackstyling.css" BorderPane.alignment="CENTER">

         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>

         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>

         <Button fx:id="profile" mnemonicParsing="false" onAction="#openProfileSettings" prefHeight="58.0" prefWidth="185.0" styleClass="button2" stylesheets="@../../../css/fullpackstyling.css" text="Profile" />
         <Separator prefWidth="200.0" />
         <Button fx:id="accountsettings" mnemonicParsing="false" onAction="#openAccountSettings" prefHeight="58.0" prefWidth="185.0" styleClass="button2" stylesheets="@../../../css/fullpackstyling.css" text="Account" />
         <Separator prefWidth="200.0" />
         <Button fx:id="preferencessettings" mnemonicParsing="false" onAction="#openPreferencesSettings" prefHeight="58.0" prefWidth="185.0" styleClass="button2" stylesheets="@../../../css/fullpackstyling.css" text="Preferences" />
         <Separator prefWidth="200.0" />
         <Button fx:id="badgessettings" mnemonicParsing="false" onAction="#openMyBadgesSettings" prefHeight="58.0" prefWidth="185.0" styleClass="button2" text="My Badges" />
         <Separator prefWidth="200.0" />
         <Button fx:id="aboutussettings" mnemonicParsing="false" onAction="#openAboutUsSettings" prefHeight="58.0" prefWidth="185.0" styleClass="button2" text="About Us" />
      </VBox>
   </left>
   <center>
      <Pane prefHeight="400.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </Pane>
   </center>
</BorderPane>
