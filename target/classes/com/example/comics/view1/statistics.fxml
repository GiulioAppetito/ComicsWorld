<BorderPane fx:id="mainPane" prefHeight="729.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.comics.view1.StatisticsControllerG">
    <left>
        <VBox fx:id="settingsBox" prefHeight="400" prefWidth="185.0" styleClass="transparent" stylesheets="@../../../../css/fullpackstyling.css" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>

            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>

            <Button fx:id="btnRatings" mnemonicParsing="false" onAction="#openStatisticsRating" prefHeight="58.0" prefWidth="185.0" styleClass="button2" stylesheets="@../../../../css/fullpackstyling.css" text="Ratings">
